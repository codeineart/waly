{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    /*
      https://github.com/Microsoft/TypeScript-Handbook/blob/master/pages/Module%20Resolution.md#path-mapping
    */
    "baseUrl": ".",
    "paths": {
      // "*": ["./*", "*", "src/*"],
      "*": ["*"],
      "@/*": ["./src/*"],
      "src/*": ["./src/*"],
      // "*/src/*": ["./src/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["./node_modules", "./node_modules/*"]
}
